<Window x:Class="Loopbox_GUI.TrackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Loopbox_GUI"
        mc:Ignorable="d"
        Title="Track View" Height="400" Width="700" ResizeMode="NoResize" Background="Black" Foreground="{x:Null}" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None" BorderBrush="#FF191919" BorderThickness="5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0">
            <TextBlock Text="Loopbox Track" FontSize="22" Foreground="#FF909090" TextAlignment="Center" FontWeight="Bold"/>
            <Button x:Name="btnMetaAlbumArt" Height="50" Background="#FF191919" Foreground="#FF909090" BorderBrush="{x:Null}" Click="btnMetaAlbumArt_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Find album art" FontSize="16"/>
                </StackPanel>
            </Button>
            <Button x:Name="btnMeta" Height="50" Background="#FF191919" Foreground="#FF909090" BorderBrush="{x:Null}" Click="btnMeta_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Find meta info" FontSize="16"/>
                </StackPanel>
            </Button>
            <Button x:Name="btnExit" Height="50" Background="#FF191919" Foreground="#FF909090" BorderBrush="{x:Null}" Click="btnExit_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Close" FontSize="16"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <Image x:Name="imageTrack" Grid.Column="0" Grid.Row="1" Source="images/noimage.png"></Image>
        <StackPanel Grid.Column="1" Grid.Row="0">
            <TextBlock x:Name="textTrackName" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackArtist" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackExists" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackComposer" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackAlbum" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackGrouping" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackGenre" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackKind" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackSize" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackYear" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackAvarageBpm" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackDateadded" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackBitrate" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackSamplerate" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackComments" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackPlaycount" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackRating" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackRemixer" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackTonality" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackLabel" FontSize="16" Foreground="#FF909090"/>
            <TextBlock x:Name="textTrackMix" FontSize="16" Foreground="#FF909090"/>
        </StackPanel>
    </Grid>
</Window>
