<Window x:Class="Loopbox_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Loopbox_GUI"
        mc:Ignorable="d"
        Title="Loopbox!" Height="249.333" Width="250" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Background="Black" Foreground="{x:Null}">
    <Grid Height="219" VerticalAlignment="Top">
        <Button x:Name="btnLoadConfig" Width="224" Height="30" Background="#FF191919" Foreground="#FF909090" BorderBrush="{x:Null}" Margin="10,10,10,179">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Load collection" FontSize="16"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnViewConfig" Width="224" Height="30" Background="#FF191919" Foreground="#FF909090" BorderBrush="{x:Null}" Margin="10,45,10,144">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="View collection" FontSize="16"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
